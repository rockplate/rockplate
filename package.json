{
  "name": "rockplate",
  "version": "1.0.0-pre.9",
  "description": "Templating language for sensible humans",
  "main": "dist/umd/rockplate.min.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "/dist",
    "/types"
  ],
  "scripts": {
    "prepare": "npm run build",
    "coverage": "jest --coverage",
    "lint": "tslint -p tsconfig.json",
    "prebuild": "rimraf dist",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:docs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "webpack --env=production",
    "build:docs": "typedoc --out docs/api --target es6 --theme minimal --exclude '**/*.spec.ts' src",
    "watch": "webpack --env=development",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache"
  },
  "author": "Safraz Razik",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "tsc-watch": "^4.1.0",
    "tslint": "^6.0.0",
    "typedoc": "^0.16.10",
    "typescript": "^3.7.5",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  }
}
